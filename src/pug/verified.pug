                                .logo
                                  image(src='assets/img/logo.png' style='height:17rem; margin-bottom:2rem')

                            // Page heading
                            h4.mb-5 Gracias por verificar tu email!

        

        // Footer
        footer.footer.bg-light
            .container
                .row
                    .col-lg-6.h-100.text-center.text-lg-start.my-auto
                        ul.list-inline.mb-2
                        p.text-muted.small.mb-4.mb-lg-0 &copy; NFCogos 2023. All rights reserved.
                    .col-lg-6.h-100.text-center.text-lg-end.my-auto
                        ul.list-inline.mb-0
                            li.list-inline-item.me-4
                                a(href='https://www.facebook.com/100088843527809')
                                    i.bi-facebook.fs-3
                            li.list-inline-item.me-4
                                a(href='https://www.twitter.com/nfcogos')
                                    i.bi-twitter.fs-3
                            li.list-inline-item
                                a(href='https://www.instagram.com/nfcogos')
                                    i.bi-instagram.fs-3
